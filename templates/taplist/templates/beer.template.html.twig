<div class="taplist-beer" id="{{ beer.id }}" data-abv="{{ beer.abv }}" data-rating="{{ beer.ratingScore }}" data-brewery="{{ beer.brewery.name }}" data-name="{{ beer.name }}" data-session="{{ session.name }} data-style-category="{{ beer.style.category }}">
	<div class="beer-info">
	    <div class="title">
	    	<div class="tick"><i class="fa fa-check" aria-hidden="true"></i></div>
	    	<div class="beer-name"><div class="favorite"><i class="fa fa-star-o" aria-hidden="true"></i></div> {{ beer.name }}</div> 
	    </div>
	    <div class="session-color" style="background-color:{{ session.color }}"></div>
		<div class="content">
			<div class="pull-right right-side">
		    	<div class="beer-details">{% if beer.abv > 0 %}{{ beer.abv|round(2) }}%{% else %}N/A{% endif %} ABV</div>
		   		<div class="beer-details" {% if beer.ibu == 0 %}style="visibility:hidden;"{% endif %}>{{ beer.ibu|round(2) }} IBU</div>
		    	<a class="open-untappd pull-right" title="Open in Untappd" target="_blank" href="untappd://beer/{{ beer.id }}"><img src="{{ asset('/images/square_untappd_logo.jpg') }}"/></a>
			</div>
		    <div class="beer-details">{{ beer.brewery.name }}</div>
		    <div class="beer-details">{{ beer.style.name }}</div>
		    <div class="beer-details">{{ beer.ratingScore|rating|raw }} <span class="rating-value"><strong>{% if beer.ratingScore == 0 %}N/A{% else %}{{ beer.ratingScore }}{% endif %}</strong> Avg ({{ beer.ratingCount }} ratings)</span></div>
		</div>
	</div>
</div>